{% extends 'layout/admin.base.twig' %}
{% block content %}
    <h2>Administration des articles</h2>
    <a class="btn btn-primary" href="{{ path('form_news_create') }}">Ajouter un article</a>
    {% for article in articles %}
        <h4>Article {{ article.id }}</h4>
        <h6>Fran√ßais</h6>
        <p class="well">{{ article.contenuFr }}</p>
        <h6>Anglais</h6>
        <p class="well"> {{ article.contenuEn }}</p>
        <h6>Allemand</h6>
        <p class="well">{{ article.contenuDe }}</p>
